<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/shiftItemRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="4dp"
            android:background="#BAD7F5">

            <ImageView
                android:id="@+id/nurseImage"
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_person_brown" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="68dp"
                android:layout_marginTop="2dp"
                android:text="Cesar Gouveia"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/teamTimeTextView"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_below="@+id/nameTextView"
                android:layout_alignParentStart="true"
                android:layout_marginStart="68dp"
                android:layout_marginTop="-2dp"
                android:text="OT - 08:00 - 12:00"
                android:textSize="25sp" />

        </RelativeLayout>
</androidx.cardview.widget.CardView>