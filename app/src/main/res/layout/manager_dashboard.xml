<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    app:circularflow_radiusInDP="0">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="256dp"
        android:layout_height="124dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_person_brown"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.549"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.955" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="204dp"
        android:paddingTop="8dp"
        android:text="Hello Mandy!"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/image_create_roster"
        android:layout_width="144dp"
        android:layout_height="140dp"
        android:layout_marginTop="72dp"
        android:adjustViewBounds="false"
        android:backgroundTint="#A5AEEA"
        app:circularflow_angles="0"
        app:layout_constraintEnd_toStartOf="@+id/image_shift"
        app:layout_constraintHorizontal_bias="0.362"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/ic_create_shift" />

    <ImageButton
        android:id="@+id/image_notification"
        android:layout_width="144dp"
        android:layout_height="140dp"
        android:layout_marginTop="29dp"
        android:backgroundTint="#DC9F9F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image_leave"
        app:layout_constraintHorizontal_bias="0.362"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_create_roster"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_manager_notification" />

    <ImageButton
        android:id="@+id/image_shift"
        android:layout_width="144dp"
        android:layout_height="140dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="4dp"
        android:accessibilityLiveRegion="none"
        android:adjustViewBounds="true"
        android:backgroundTint="#A4DD7A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/ic_manager_shift" />

    <ImageButton
        android:id="@+id/image_leave"
        android:layout_width="144dp"
        android:layout_height="140dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#6EB3FA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_shift"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_manager_leave" />


</androidx.constraintlayout.widget.ConstraintLayout>